{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "module": "CommonJS",
    "noEmit": false,
    "noEmitOnError": true,
    "outDir": "./dist",
    "removeComments": true
  },
  "exclude": ["node_modules", "**/*.test*"],
  "include": [
    "src/*.ts",
    "src/*.tsx",
    "src/*.js",
    "src/*.jsx",
    "src/*.cjs",
    "src/*.mjs",
    "**/*.d.ts"
  ]
}
